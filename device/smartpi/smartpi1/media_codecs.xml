<?xml version="1.0" encoding="utf-8"?>
<!-- Media codecs for SmartPi One (Allwinner H3 - CedarX) -->
<MediaCodecs>
    <Include href="media_codecs_google_audio.xml" />
    <Include href="media_codecs_google_video.xml" />

    <Settings>
        <Setting name="max-video-encoder-input-buffers" value="5" />
    </Settings>

    <Encoders>
        <!-- H.264/AVC Encoder (software) -->
        <MediaCodec name="OMX.google.h264.encoder" type="video/avc">
            <Limit name="size" min="176x144" max="1920x1088" />
            <Limit name="alignment" value="16x16" />
            <Limit name="block-size" value="16x16" />
            <Limit name="bitrate" range="1-12000000" />
            <Limit name="concurrent-instances" max="2" />
        </MediaCodec>
    </Encoders>

    <Decoders>
        <!-- CedarX Hardware Video Decoder -->
        <MediaCodec name="OMX.allwinner.video.decoder.avc" type="video/avc">
            <Limit name="size" min="64x64" max="1920x1088" />
            <Limit name="alignment" value="16x16" />
            <Limit name="block-size" value="16x16" />
            <Limit name="concurrent-instances" max="8" />
            <Feature name="adaptive-playback" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
        </MediaCodec>

        <MediaCodec name="OMX.allwinner.video.decoder.h265" type="video/hevc">
            <Limit name="size" min="64x64" max="1920x1088" />
            <Limit name="alignment" value="16x16" />
            <Limit name="block-size" value="16x16" />
            <Limit name="concurrent-instances" max="8" />
            <Feature name="adaptive-playback" />
            <Quirk name="requires-allocate-on-input-ports" />
            <Quirk name="requires-allocate-on-output-ports" />
        </MediaCodec>

        <MediaCodec name="OMX.allwinner.video.decoder.mpeg2" type="video/mpeg2">
            <Limit name="size" min="64x64" max="1920x1088" />
            <Limit name="alignment" value="16x16" />
            <Limit name="block-size" value="16x16" />
            <Limit name="concurrent-instances" max="8" />
            <Feature name="adaptive-playback" />
        </MediaCodec>

        <MediaCodec name="OMX.allwinner.video.decoder.mpeg4" type="video/mp4v-es">
            <Limit name="size" min="64x64" max="1920x1088" />
            <Limit name="alignment" value="16x16" />
            <Limit name="block-size" value="16x16" />
            <Limit name="concurrent-instances" max="8" />
            <Feature name="adaptive-playback" />
        </MediaCodec>

        <MediaCodec name="OMX.allwinner.video.decoder.vp8" type="video/x-vnd.on2.vp8">
            <Limit name="size" min="64x64" max="1920x1088" />
            <Limit name="alignment" value="16x16" />
            <Limit name="block-size" value="16x16" />
            <Limit name="concurrent-instances" max="8" />
            <Feature name="adaptive-playback" />
        </MediaCodec>
    </Decoders>
</MediaCodecs>
